               class="codeimp.CodeImpActionDelegate"
               icon="icons/no-smell.png"
               id="CodeImpPlugin.action1"
               label="&amp;Code Improvement"
               menubarPath="CodeImpPlugin.menu/content"
               style="push"
               toolbarPath="Normal/additions"
               tooltip="Remove code smell">
